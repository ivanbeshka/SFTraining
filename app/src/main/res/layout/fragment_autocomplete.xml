<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="354dp"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:maxWidth="366dp">

    <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:id="@+id/search_autocomplete_tv"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/colorTransparent"
        android:hint="@string/write_exercise_name"
        android:imeOptions="actionSearch"
        android:inputType="textCapSentences"
        android:minWidth="300dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_delete_written"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_delete_written"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="end"
        android:background="@color/colorTransparent"
        android:src="@drawable/ic_cancel_24px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>